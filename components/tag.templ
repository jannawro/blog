package components

templ Tag(tag string) {
	<a href={ templ.SafeURL("/?tag=" + tag) } class="inline-block border-2 border-[#1a1a1a] px-2 py-1 text-sm font-bold mr-2 mb-2 uppercase text-[#1a1a1a] hover:bg-[#FF0000] hover:text-[#f5f5f5] hover:border-[#FF0000] transition-colors duration-200">
		{ tag }
	</a>
}
